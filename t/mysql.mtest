         'ssl' => 0,
         'testuser' => '',
         'nocatchstderr' => 0,
         'libs' => '-L/usr/local/mysql/lib -lmysqlclient -lcrypt -lnsl -lm -lz -lc -lnss_files -lnss_dns -lresolv -lc -lnss_files -lnss_dns -lresolv',
         'cflags' => '-I/usr/local/mysql/include -mcpu=pentiumpro',
         'testdb' => 'test',
         'mysql_config' => 'mysql_config'
       };
